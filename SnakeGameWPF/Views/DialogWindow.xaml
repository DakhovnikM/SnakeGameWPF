<Window x:Class="SnakeGameWPF.Views.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameWPF.Views"
        mc:Ignorable="d" Height="200" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Topmost="True" WindowStyle="None" Padding="0,0,0,0">
    <Grid Background="Tan">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Name="Label" Content="Label" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Grid.Row="1" Name="Button" Content="OK" HorizontalAlignment="Center" Width="125" Click="Button_Click" FontSize="24" Background="Bisque" Margin="0 10"/>

    </Grid>
</Window>
